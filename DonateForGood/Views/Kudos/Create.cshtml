@model DonateForGood.Models.Kudo

@{
    ViewBag.Title = "Post Success Story";
    HtmlHelper.ClientValidationEnabled = true;
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

    <br />

    <div class="container">
        <div id="wrapper" class="row">
            <div id="page-wrapper" class="col-md-12">
                <br />
                <div class=" panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Post Kudos</h3>
                    </div>
                    <div class="panel-body">

                    @{
                        byte[] image = Session["imageDataKudos"] as byte[];
                        if (image == null)
                        {

                            using (@Html.BeginForm("UploadImage", "Kudos", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="container">
                                    <div class="row">

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Photo, "Upload Picture", new { @class = "control-label col-md-20" })

                                            <div class="row">
                                                <div class="col-md-5">
                                                    <input type="file" name="file"  />
                                                </div>
                                                <div class="col-md-3">
                                                    <input type="submit" value="Upload Image" class="btn btn-sm btn-success btn-block " />
                                                </div>

                                            </div>
                                        </div>

                                    </div>

                                </div>
                            }
                        }
                        else
                        {
                            <div class="form-group">
                                @Html.Raw(Session["imageFileNameKudos"] as string)
                            </div>
                        }
                    }



                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <br />

                        <fieldset>
                        <div class="form-group col-md-8">
                            @Html.TextAreaFor(model => model.Comment, new { placeholder = "Kudos Text", @class = "form-control",  @rows = "5" })                            
                            @Html.ValidationMessageFor(model => model.Comment, "Please Enter Phone Number")
                        </div>
                        <div class="form-group col-md-8">
                            <input type='file' name='Photo' id='Photo' class="form-control" />
                        </div>
                          
                            <div class="col-md-3 col-md-offset-9 ">
                                <input type="submit" value="Post" class="btn btn-sm btn-success btn-block" />
                        </div>

                        </fieldset>

                    }

                    </div>
                </div>
            </div>
        </div>
    </div>




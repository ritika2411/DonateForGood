@model DonateForGood.Models.Kudo

@{
    ViewBag.Title = "Post Success Story";

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/uploadImage")
}

<br />

<div class="container">
    <div id="wrapper" class="row">
        <div id="page-wrapper" class="col-md-12">
            <br />
            <div class=" panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Post Kudos</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <br />

                    <fieldset>
                        <div class="form-group col-md-8">
                            @Html.TextAreaFor(model => model.Comment, new { placeholder = "Kudos Text", @class = "form-control required", @rows = "5" })
                            @Html.ValidationMessageFor(model => model.Comment)

                        </div>
                        <div class="form-group col-md-8">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-9">
                                        <input type="file" name="file" id="file" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type='button' id='go' value="Upload Image" class="btn btn-md btn-success btn-block" />
                                    </div>
                                </div>
                            </div>
                            <span id="spanfile" style="color:#800000"></span>
                        </div>

                        <div class="col-md-3 col-md-offset-9 ">
                            <input type="submit" value="Post" class="btn btn-sm btn-success btn-block" />
                        </div>

                    </fieldset>

                    }

                </div>
            </div>
        </div>
    </div>
</div>



